{
  "name": "auth-proxy",
  "version": "0.1.0",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "migration:generate": "yarn typeorm migration:generate  -n",
    "migration:create": "yarn run typeorm migration:create -n",
    "migration:run": "yarn run typeorm migration:run",
    "migration:revert": "yarn run typeorm migration:revert",
    "typeorm": "ts-node --project tsconfig.server.json $(npm bin)/typeorm",
    "prettier": "prettier --write 'src/**/*.{ts,tsx,js}'"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "graphql": "^14.6.0",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "next": "latest",
    "pg": "^7.18.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.24",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.3",
    "@types/graphql": "^14.5.0",
    "@types/hapi__joi": "^16.0.12",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.9.0",
    "@types/node": "^12.12.29",
    "@types/react": "^16.8.17",
    "@types/react-dom": "16.8.4",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "nodemon": "^1.19.0",
    "prettier": "^1.19.1",
    "ts-node": "^8.1.0",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,js,tsx}": [
      "yarn run prettier"
    ]
  },
  "engines": {
    "node": ">=12.16.1"
  }
}
